        <Button x:Name="btn30Min" Grid.Column="2" Grid.Row="2" Width="30" Height="30" Background="#EAEAEA" BorderThickness="0" HorizontalAlignment="Center" Margin="0 5,15,5" Padding="3,3,3,3">
