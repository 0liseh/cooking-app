        </Border>

        <Image Grid.Column="4" Grid.Row="10" Grid.ColumnSpan="4" Source="/CPSC481A2;component/img/cinnamon.jpg"  Height="114" VerticalAlignment="Top" HorizontalAlignment="Left" Width="148"/>

