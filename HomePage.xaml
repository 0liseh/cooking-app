        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Grid.Row="4" FontSize="12" FontWeight="SemiBold" Text="5 MIN" Foreground="#5F5F5F" Margin="12,0,0,5" Height="16" VerticalAlignment="Bottom" />
