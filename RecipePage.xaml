<Page x:Class="cooking_app.RecipePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:cooking_app"
      mc:Ignorable="d" 
      d:DesignHeight="840" d:DesignWidth="390"
      Title="RecipePage" Background="White">

    
    

    <ScrollViewer>
          <StackPanel HorizontalAlignment="Center">
            <!-- Height="130" -->
            <!-- Source="cooking-app;component/img/MisoRamen.jpg" -->
            
            <Button x:Name="back" Grid.Column="1" Grid.Row="1" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Center" Click="Back_Click" Height="50" Width="60" FontSize="20">
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Food pic -->
            <Image
                  Source="C:\Users\danch\github\Cooking App\Recipe Page\images\MinoRamen.jfif"
             />

            <!-- Food card section -->
            <Border BorderThickness="1" BorderBrush="#000000">
                <Grid Height="150" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Content="MISO RAMEN" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="ExtraBold" FontSize="30" Grid.ColumnSpan="3"/>
                    <Image Source="C:\Users\danch\github\Cooking App\Recipe Page\images\red-heart.png" Grid.Column="2" HorizontalAlignment="Right"/>
                    <Label Content="30 minutes" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                    <Label Content="Easy" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                    <UserControl x:Name="Rating1"
                      Grid.Column="2"
                      Grid.Row="1"
                    >
                        <Grid Height="25" Width="100">
                            <Grid.Resources>
                                <ControlTemplate x:Key="starTemplate" TargetType="{x:Type ToggleButton}">
                                    <Viewbox>
                                        <Path Name="star" Fill="Gray" Data="F1 M 145.637,174.227L 127.619,110.39L 180.809,70.7577L 114.528,68.1664L 93.2725,5.33333L 70.3262,67.569L 4,68.3681L 56.0988,109.423L 36.3629,172.75L 91.508,135.888L 145.637,174.227 Z"/>
                                    </Viewbox>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="star" Property="Fill">
                                                <!-- Value="Yellow">-->
                                                <Setter.Value>
                                                    <LinearGradientBrush>
                                                        <GradientStop Color="#88FFEF11" Offset="0" />
                                                        <GradientStop Color="#FFFFEE00" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Tag="1" Cursor="Hand" Template="{StaticResource starTemplate}" />
                            <ToggleButton Grid.Column="1" Tag="2" Cursor="Hand" Template="{StaticResource starTemplate}" />
                            <ToggleButton Grid.Column="2" Tag="3" Cursor="Hand" Template="{StaticResource starTemplate}" />
                            <ToggleButton Grid.Column="3" Tag="4" Cursor="Hand" Template="{StaticResource starTemplate}" />
                            <ToggleButton Grid.Column="4" Tag="5" Cursor="Hand" Template="{StaticResource starTemplate}" />
                        </Grid>
                    </UserControl>

                    <Label Content="1 serving" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
                </Grid>
            </Border>

            <StackPanel Margin="10,15,0,0">
                <!-- Tabs section -->

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Width="110" Grid.Column="0" Grid.Row="0">
                        <Button Height="40" x:Name="IngridentsTab" Content="Ingridients" FontSize="20" Click="TabClick" />
                    </Grid>
                    <Grid Width="110" Grid.Column="1" Grid.Row="0">
                        <Button Height="40" x:Name="InstructionsTab" Content="Instructions" FontSize="20" Click="TabClick" Background="#FFFFFF"/>
                    </Grid>
                    <Grid Margin="0,30,0,0" Width="110" Grid.Column="0" Grid.Row="1">
                        <Button Height="40" x:Name="NutritionTab" Content="Nutrition" FontSize="20" Click="TabClick" Background="#FFFFFF"/>
                    </Grid>
                    <Grid Margin="0,30,0,0" Width="110" Grid.Column="1" Grid.Row="1">
                        <Button Height="40" x:Name="ReviewsTab" Content="Reviews" FontSize="20" Click="TabClick" Background="#FFFFFF"/>
                    </Grid>
                </Grid>


                <!-- Ingridients section -->
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="3"
                    Width="auto"
                    FontSize="35"
                    Text="INGREDIENTS"
                    Margin="0, 20, 0, 0"
                    FontWeight="DemiBold"
                />
                <ListBox BorderThickness="0" Margin="0,0,0,15" FontSize="20">
                    <Style TargetType="CheckBox">
                        <Setter Property="LayoutTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                            </Setter.Value>
                        </Setter>
                    </Style>

                    <ListBoxItem Margin="0,0,0,15">
                        <CheckBox Content="2 Eggs" VerticalAlignment="Center" />
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="Bean sprouts"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="2 servings of Fresh Ramen noodles"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="Bamboo shoots"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="Corn kernels"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="Spinach leaves"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="Green onion"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="4 cups of Vegetable broth"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="Dashi"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="Soy sauce"/>
                    </ListBoxItem>
                    
                    <ListBoxItem>
                        <CheckBox Content="3 Tablespoons of Miso paste"/>
                    </ListBoxItem>
                </ListBox>


                <!-- Instructions section -->
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="4"
                    Width="auto"
                    FontSize="25"
                    Text="INSTRUCTIONS"
                    Margin="0, 20, 0, 0"
                    FontWeight="DemiBold"
                />
                <ListBox BorderThickness="0" Margin="0,0,0,15"  FontSize="20">
                    <ListBoxItem>1. Cook the egg</ListBoxItem>
                    <ListBox BorderThickness="0">
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                a) Place the whole, un-cracked <TextBlock Text="eggs" TextDecorations="Underline" Foreground="Blue"/> in a medium pot and fill with water to cover 
                                <TextBlock Text="eggs" TextDecorations="Underline" Foreground="Blue"/> by 1 inch (2.5 cm).
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                b) Turn the heat to high and when boiling, turn the heat off and let the <TextBlock Text="eggs" TextDecorations="Underline" Foreground="Blue"/> sit in the hot water for 10 minutes.
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                c) Promptly use a slotted spoon (keep the hot water in the pot) to remove the <TextBlock Text="eggs" TextDecorations="Underline" Foreground="Blue"/> and peel the egg under cold running water.
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                d) Slice each egg in half.
                            </TextBlock>
                        </ListBoxItem>
                    </ListBox>

                    <ListBoxItem>2. Cook the vegetables</ListBoxItem>
                    <ListBox BorderThickness="0">
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                a) If using fresh <TextBlock Text="spinach" TextDecorations="Underline" Foreground="Blue"/>:
                            </TextBlock>
                        </ListBoxItem>
                        <ListBox BorderThickness="0">
                            <ListBoxItem>
                                <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                    i. Add the <TextBlock Text="spinach" TextDecorations="Underline" Foreground="Blue"/> to the hot water in the pot. Let sit for 1 minute.
                                </TextBlock>
                            </ListBoxItem>
                            <ListBoxItem>
                                <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                ii. Use slotted spoon (keep hot water in the pot!) to remove <TextBlock Text="spinach" TextDecorations="Underline" Foreground="Blue"/>.
                                </TextBlock>
                            </ListBoxItem>
                            <ListBoxItem>
                                <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                iii. Rinse <TextBlock Text="spinach" TextDecorations="Underline" Foreground="Blue"/> with cool water. Use hands to squeeze the <TextBlock Text="spinach" TextDecorations="Underline" Foreground="Blue"/> leaves to remove as much water as possible.
                                </TextBlock>
                            </ListBoxItem>
                        </ListBox>

                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                b) If using frozen <TextBlock Text="spinach" TextDecorations="Underline" Foreground="Blue"/>, defrost it, then squeeze leaves with hands to remove as much water as possible.
                            </TextBlock>
                        </ListBoxItem>

                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                               c) To briefly cook the <TextBlock Text="bean sprouts" TextDecorations="Underline" Foreground="Blue"/>, add the bean sprouts to the same hot water in pot. 
                               Let sit for 1 minute. Use slotted spoon to remove <TextBlock Text="bean sprouts" TextDecorations="Underline" Foreground="Blue"/>. Again, keep the hot water in the pot!
                            </TextBlock>
                        </ListBoxItem>
                    </ListBox>

                    <ListBoxItem>3. Cook the ramen noodles</ListBoxItem>
                    <ListBox BorderThickness="0">
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                a) Return the same pot of water to a boil.
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                                b) Add the <TextBlock Text="ramen noodles" TextDecorations="Underline" Foreground="Blue"/> and cook according to package instructions (most ramen noodles only take 3 minutes to cook.)
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                               c)  Drain and rinse with cold water to stop the cooking.
                            </TextBlock>
                        </ListBoxItem>
                    </ListBox>

                    <ListBoxItem>4. Make the miso soup</ListBoxItem>
                    <ListBox BorderThickness="0">
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                               a) In a large pot, add the stock, instant <TextBlock Text="dashi" TextDecorations="Underline" Foreground="Blue"/> and <TextBlock Text="soy sauce" TextDecorations="Underline" Foreground="Blue"/>.
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                               b) Bring to a boil over high heat. Remove from the heat and stir in the <TextBlock Text="miso" TextDecorations="Underline" Foreground="Blue"/>. 
                                Taste the soup and add an additional 1 to 2 tablespoons of <TextBlock Text="miso" TextDecorations="Underline" Foreground="Blue"/> if you’d like. 
                                Ladle soup into each bowl.
                            </TextBlock>
                        </ListBoxItem>
                        <ListBoxItem>
                            <TextBlock TextWrapping="WrapWithOverflow" Width="300">
                               c) Top each bowl with <TextBlock Text="green onions" TextDecorations="Underline" Foreground="Blue"/>.
                            </TextBlock>
                        </ListBoxItem>
                    </ListBox>
                </ListBox>

                <!-- Nutrition section -->
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="5"
                    Width="auto"
                    FontSize="25"
                    Text="NUTRITION"
                    Margin="0, 20, 0, 0"
                    FontWeight="DemiBold"
                />
                <ListBox BorderThickness="0" Margin="0,0,0,20"  FontSize="20">
                    <ListBoxItem>Calories: 469kcal</ListBoxItem>
                    <ListBoxItem>Carbohydrates: 63g</ListBoxItem>
                    <ListBoxItem>Protein: 18g</ListBoxItem>
                    <ListBoxItem>Fat: 16g</ListBoxItem>
                    <ListBoxItem>Saturated Fat: 7g</ListBoxItem>
                    <ListBoxItem>Cholesterol: 163mg</ListBoxItem>
                    <ListBoxItem>Sodium: 4323mg</ListBoxItem>
                    <ListBoxItem>Potassium: 367mg</ListBoxItem>
                    <ListBoxItem>Fiber: 4g</ListBoxItem>
                    <ListBoxItem>Sugar: 9g</ListBoxItem>
                    <ListBoxItem>Vitamin A: 1520IU</ListBoxItem>
                    <ListBoxItem>Vitamin C: 8.9mg</ListBoxItem>
                    <ListBoxItem>Calcium: 62mg</ListBoxItem>
                    <ListBoxItem>Iron: 4.9mg</ListBoxItem>
                </ListBox>

                <!-- Reviews section -->
                <TextBlock
                    Grid.Column="1"
                    Grid.Row="6"
                    Width="auto"
                    FontSize="25"
                    Text ="REVIEWS"
                    Margin="0, 20, 0, 0"
                    FontWeight="DemiBold"
                />

                <!-- User's review -->

                <UserControl x:Name="Rating2"
                      Grid.Column="2"
                      Grid.Row="1"
                >
                    <Grid Height="25" Width="100">
                        <Grid.Resources>
                            <ControlTemplate x:Key="starTemplate" TargetType="{x:Type ToggleButton}">
                                <Viewbox>
                                    <Path Name="star" Fill="Gray" Data="F1 M 145.637,174.227L 127.619,110.39L 180.809,70.7577L 114.528,68.1664L 93.2725,5.33333L 70.3262,67.569L 4,68.3681L 56.0988,109.423L 36.3629,172.75L 91.508,135.888L 145.637,174.227 Z"/>
                                </Viewbox>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="star" Property="Fill">
                                            <!-- Value="Yellow">-->
                                            <Setter.Value>
                                                <LinearGradientBrush>
                                                    <GradientStop Color="#88FFEF11" Offset="0" />
                                                    <GradientStop Color="#FFFFEE00" Offset="1" />
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ToggleButton Grid.Column="0" Tag="1" Cursor="Hand" Template="{StaticResource starTemplate}" />
                        <ToggleButton Grid.Column="1" Tag="2" Cursor="Hand" Template="{StaticResource starTemplate}" />
                        <ToggleButton Grid.Column="2" Tag="3" Cursor="Hand" Template="{StaticResource starTemplate}" />
                        <ToggleButton Grid.Column="3" Tag="4" Cursor="Hand" Template="{StaticResource starTemplate}" />
                        <ToggleButton Grid.Column="4" Tag="5" Cursor="Hand" Template="{StaticResource starTemplate}" />
                    </Grid>
                </UserControl>
                <Border BorderBrush="#000000" BorderThickness="1" Margin="0,0,0,10" Width="300" >
                    <Grid Height="50" >
                        <TextBox  Text="Add Your Review!"/>
                    </Grid>
                </Border>
                <Button Content="Submit" Width="50" Height="20" Margin="0,0,0,30"/>


                <!-- Other user's comments -->
                <Border BorderBrush="#000000" BorderThickness="1" Width="300" >
                    <Grid Height="50" >
                        <TextBox  Text="This food sucks!"/>
                    </Grid>
                </Border>
                <Grid Width="300" Height="25" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="John Doe" Grid.Column="0" HorizontalAlignment="Center"  FontSize="14"/>
                    <UserControl x:Name="Rating3"
                      Grid.Column="2"
                      Grid.Row="1"
                    >
                        <Grid Height="25" Width="100">
                            <Grid.Resources>
                                <ControlTemplate x:Key="starTemplate" TargetType="{x:Type ToggleButton}">
                                    <Viewbox>
                                        <Path Name="star" Fill="Gray" Data="F1 M 145.637,174.227L 127.619,110.39L 180.809,70.7577L 114.528,68.1664L 93.2725,5.33333L 70.3262,67.569L 4,68.3681L 56.0988,109.423L 36.3629,172.75L 91.508,135.888L 145.637,174.227 Z"/>
                                    </Viewbox>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="star" Property="Fill">
                                                <!-- Value="Yellow">-->
                                                <Setter.Value>
                                                    <LinearGradientBrush>
                                                        <GradientStop Color="#88FFEF11" Offset="0" />
                                                        <GradientStop Color="#FFFFEE00" Offset="1" />
                                                    </LinearGradientBrush>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Grid.Resources>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <ToggleButton Grid.Column="0" Tag="1" Cursor="Hand" Template="{StaticResource starTemplate}" />
                            <ToggleButton Grid.Column="1" Tag="2" Cursor="Hand" Template="{StaticResource starTemplate}" />
                            <ToggleButton Grid.Column="2" Tag="3" Cursor="Hand" Template="{StaticResource starTemplate}" />
                            <ToggleButton Grid.Column="3" Tag="4" Cursor="Hand" Template="{StaticResource starTemplate}" />
                            <ToggleButton Grid.Column="4" Tag="5" Cursor="Hand" Template="{StaticResource starTemplate}" />
                        </Grid>
                    </UserControl>
                </Grid>

                <Border BorderBrush="#000000" BorderThickness="1"  Width="300" >
                    <Grid Height="50" >
                        <TextBox  Text="This food sucks!"/>
                    </Grid>
                </Border>
                <Grid Width="300" Height="25" Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="150"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="John Doe" Grid.Column="0" HorizontalAlignment="Center"  FontSize="14"/>
